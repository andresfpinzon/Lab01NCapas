@model ENTITIES.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Customer Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Model.ProductName
        </dd>
        <dt class="col-sm-2">
            Supplier Id
        </dt>
        <dd class="col-sm-10">
            @Model.SupplierId
        </dd>
        <dt class="col-sm-2">
            Unit Price
        </dt>
        <dd class="col-sm-10">
            @Model.UnitPrice
        </dd>
        <dt class="col-sm-2">
            Package
        </dt>
        <dd class="col-sm-10">
            @Model.Package
        </dd>
        <dt class="col-sm-2">
            State
        </dt>
        <dd class="col-sm-10">
            @Model.IsDiscontinued
        </dd>
    </dl>
</div>

<div>
    <form asp-controller="Products" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas da-arrow-left"></i> Back to list</a>
    </form>
</div>